{
  "name": "@dream-lab-ai/pam-vitest-config",
  "version": "1.0.0",
  "author": "Pam AI",
  "description": "Pam AI vitest preset configuration",
  "repository": {
    "type": "git",
    "url": "https://github.com/dream-lab-ai/pam-vitest-config.git"
  },
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./vitestBaseConfig": "./presets/vitestBaseConfig.js",
    "./vitestReactTestingLibraryConfig": "./presets/vitestReactTestingLibraryConfig.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "debug": "node index.js",
    "build": "exit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "npm-audit": "npm audit",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "private"
  },
  "lint-staged": {
    "*": [
      "npm run lint",
      "npm run format"
    ]
  },
  "peerDependencies": {
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "@dream-lab-ai/pam-eslint-config": "github:dream-lab-ai/pam-eslint-config",
    "@testing-library/jest-dom": "^6.4.2",
    "@vitest/coverage-v8": "^4.0.0",
    "@vitest/ui": "^4.0.0",
    "lodash.merge": "^4.6.2"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "vitest": "^4.0.0"
  }
}
